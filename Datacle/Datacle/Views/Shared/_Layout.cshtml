<!DOCTYPE html>
<html lang="en" data-ng-app="list">
    <head>
        <meta charset="utf-8" />
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        <link href="~/Content/Bootstrap/bootstrap.min.css" rel="stylesheet" />
        <link href="~/Content/Bootstrap/bootstrap-flatly.min.css" rel="stylesheet" />
        <link href="~/Content/datacle.css" rel="stylesheet" />
        <script src="~/Scripts/angular.js"></script>
        <script src="~/JS/datacle.js"></script>
        <script src="~/JS/User/userService.js"></script>
        <script src="~/JS/User/shareService.js"></script>
        <script src="~/JS/List/listService.js"></script>
        <script src="~/JS/List/listitemService.js"></script>
        <script src="~/JS/View/viewService.js"></script>
        <script src="~/JS/View/viewitemService.js"></script>
        <script src="~/JS/View/viewlistService.js"></script>
        <script src="~/JS/View/viewconnService.js"></script>
        <script src="~/JS/System/metaService.js"></script>
        <script src="~/JS/User/userModel.js"></script>
        <script src="~/JS/User/userCtrl.js"></script>
        <script src="~/JS/User/shareCtrl.js"></script>
        <script src="~/JS/List/listCtrl.js"></script>
        <script src="~/JS/List/listitemCtrl.js"></script>
        <script src="~/JS/View/viewCtrl.js"></script>
        <script src="~/JS/View/viewitemCtrl.js"></script>
        <script src="~/JS/System/menuCtrl.js"></script>
@*         
         <script src="~/JS/List/listModel.js"></script>

         <script type='text/javascript' 
                 data-main="/JS/main" src="~/Scripts/require.js"></script> *@
        <title>Datacle III</title>
    </head>
    <body data-ng-controller="MenuController">
        <header >
            <div id="hdContainer" class="container">
            <div class="row">
                <div class="col-xs-9">
                    <div class="col-xs-2 btn-success" data-ng-repeat="section in sections" 
                        data-ng-click="setSectionVisible(section.type)">{{section.type}}</div>
                </div>
                <div class="col-xs-3">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                </div>
            </div>
            </div>
        </header>
        <div id="container" class="container">
            @RenderBody()
        </div>
        <footer>
            <div class="container">
                <div class="col-xs-12">
                    <p>&copy; @DateTime.Now.Year - Harlan Brothers Engineering</p>
                </div>
            </div>
        </footer>

        <script src="~/Scripts/jquery-2.1.1.min.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>
        <script src="~/Scripts/jquery-ui-1.10.4.min.js"></script>
        @*Scripts.Render("~/bundles/jquery")*@
        @RenderSection("scripts", required: false)
    </body>
</html>

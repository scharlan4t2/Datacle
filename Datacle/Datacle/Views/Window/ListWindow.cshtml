@{  

if (ViewData["Type"].ToString() == "NewListTypeMenu")
{
    @* new list type menu*@
    <div data-ng-click="dtListType.setNew()" 
        class="btn-sm btn-info col-xs-1">Add Type</div>
    
}
if (ViewData["Type"].ToString() == "NewListMenu")
{
    @* new list menu*@
        <div data-ng-click="dtList.setNew()" 
            class="btn-sm btn-info col-xs-1">Add List</div>
}
if( ViewData["Type"].ToString() == "NewListType" )
{
    @* new list type entry*@
    <div class="panel-info bg-success modal-sm row" 
        data-ng-show="dtListType.showNew()">
        <label class="badge" >Add List Type</label>
        <input class="col-xs-12" type="text" data-ng-model="dtListType.newtype.title"/> 
        <input class="col-xs-12" type="text" title="Description" data-ng-model="dtListType.newtype.attrib.attrib.desc"/>
        <input class="ng-hide" type="text" title="Attribute" data-ng-model="dtListType.newtype.attrib.attrib"/>

        <div class="col-xs-12 text-right">
        <div class="btn btn-info" 
            data-ng-click="dtListType.saveNew(newtype)">Add
        </div>
        <div class="btn btn-warning" 
            data-ng-click="dtListType.hideNew()">Close
        </div>
        </div>
    </div>
}
if( ViewData["Type"].ToString() == "EditListType" )
{
    @* new list type entry*@
    <div class="panel-info bg-success modal-sm row" 
        data-ng-show="dtListType.showEdit()">
        <label class="badge" >Edit List Type</label>
        <input class="col-xs-12" type="text" data-ng-model="dtListType.edititem.title"/> 
        <input class="col-xs-12" type="text" title="Description" data-ng-model="dtListType.edititem.attrib.attrib.desc"/>
        <input class="ng-hide" type="text" title="Attribute" data-ng-model="dtListType.edititem.attrib.attrib"/>

        <div class="col-xs-2 text-left">
            <div class="btn btn-danger"
                 data-ng-click="dtListType.delEdit()">
                Delete
            </div>
        </div>
        <div class="col-xs-10 text-right">
            <div class="btn btn-info"
                 data-ng-click="dtListType.saveEdit()">
                Save
            </div>
            <div class="btn btn-warning"
                 data-ng-click="dtListType.hideEdit()">
                Close
            </div>
        </div>
    </div>
}
if (ViewData["Type"].ToString() == "NewList")
{
    @* new list entry*@
    <div class="panel-info bg-success modal-sm row" 
        data-ng-show="dtList.showNew()">
        <label class="badge" >Add List</label>
        <select class="col-xs-12" title="List Type" 
            data-ng-model="dtList.newlist.typeId"
            data-ng-show="!dtListType.showNew()"
            data-ng-options="lt.id as lt.title for lt in dtListType.list">
        </select> 
        <input class="col-xs-12" type="text" title="List Title" data-ng-model="dtList.newlist.title"/> 
        <input class="col-xs-12" type="text" title="Description" data-ng-model="dtList.newlist.attrib.attrib.desc"/>            
        <input class="col-xs-12" type="text" title="Attribute" data-ng-model="dtList.newlist.attrib.attrib"/>

        <div class="col-xs-12 text-right">
            <div class="col-xs-4 btn-sm btn-default"
                data-ng-click="dtList.saveNew()">Add
            </div>
            <div class="col-xs-4 btn-sm btn-warning"
                data-ng-click="dtList.hideNew()">Close
            </div>
        </div>
    </div>
}
if (ViewData["Type"].ToString() == "EditList")
{
    @* new list entry*@
    <div class="panel-info bg-success modal-sm row" 
        data-ng-show="dtList.showEdit()">
        <label class="badge" >Edit List</label>
        <select class="col-xs-12" title="List Type" 
            data-ng-model="dtList.edititem.typeid"
            data-ng-options="lt.id as lt.title for lt in dtListType.list">
        </select> 
        <input class="col-xs-12" type="text" title="List Title" data-ng-model="dtList.edititem.title"/> 
        <input class="col-xs-12" type="text" title="Description" data-ng-model="dtList.edititem.attrib.attrib.desc"/>            
        <label class="col-xs-2 sm-info" >Col</label>
        <input class="col-xs-2" type="text" title="width" data-ng-model="dtList.edititem.attrib.attrib.width"/>            
        <label class="col-xs-2 sm-info" >Title</label>
        <input class="col-xs-2" type="text" title="width" data-ng-model="dtList.edititem.attrib.attrib.widthtitle"/>            
        <label class="col-xs-2 sm-info" >Desc</label>
        <input class="col-xs-2" type="text" title="width" data-ng-model="dtList.edititem.attrib.attrib.widthdesc"/> 
        <label class="col-xs-3" >Show Desc</label><input class="col-xs-8" type="checkbox" title="width" data-ng-model="dtList.edititem.attrib.attrib.showdesc"/>            
        <input class="ng-hide" type="text" title="Attribute" data-ng-model="dtList.edititem.attrib.attrib"/>

        <div class="col-xs-2 text-left">
            <div class="btn btn-danger"
                 data-ng-click="dtList.delEdit()">
                Delete
            </div>
        </div>
        <div class="col-xs-10 text-right">
            <div class="col-xs-4 btn-sm btn-default"
                 data-ng-click="dtList.saveEdit()">
                Save
            </div>
            <div class="col-xs-4 btn-sm btn-warning"
                 data-ng-click="dtList.hideEdit()">
                Close
            </div>
        </div>
    </div>
}
if( ViewData["Type"].ToString() == "ListType" )
{
    <div id="sortListType">
        <div class="panel-info btn {{listtype.isselect?'btn-info':'btn-success'}}"
                data-ng-mouseleave="dtListType.setMouse(listtype.id,false)"
            data-ng-repeat="listtype in dtListType.getList() | orderBy:'sort'">
            <div class="holder" data-ng-show="dtListType.showMouse(listtype.id)">
                <label class="badge" 
                    data-ng-mouseleave="dtListType.setMouse(listtype.id,false)"
                    data-ng-click="dtListType.setEdit(listtype)">Edit</label>
            </div>
            <div data-ng-click="dtListType.setObj(listtype)"
                data-ng-mouseenter="dtListType.setMouse(listtype.id,true)">
                <input type="hidden" value="{{listtype.id}}" 
                    data-ng-model="listtype.id"
                    data-sort="{{listtype.sort}}" />
                <span class="text-left">{{listtype.title}}</span>
            </div>
        </div>
    </div>
}
if (ViewData["Type"].ToString() == "Lists")
{
    @* show selected type list *@
    <div id="sortList">
        <div class="btn {{list.isselect?'btn-info panel-info':'btn-success panel-success'}}"
                data-ng-show="dtList.showObj(list)"
                data-ng-mouseleave="dtList.setMouse(list.id,false)"
                data-ng-repeat="list in dtList.getList()  | orderBy:'sort'">
            <div class="holder" data-ng-show="dtList.showMouse(list.id)">
                <label class="badge" 
                    data-ng-mouseleave="dtList.setMouse(list.id,false)"
                    data-ng-click="dtList.setEdit(list)">Edit</label>
            </div>
            <div title="{{list.attrib.attrib.desc}}"
                data-ng-mouseenter="dtList.setMouse(list.id,true)">
                <input type="hidden" value="{{list.id}}" data-ng-model="list.id"
                    data-sort="{{list.sort}}" />
                <span data-ng-click="dtList.setType(list)" 
                    class="text-left">{{list.type}}</span>
                <div data-ng-click="setListItemObj(list)" 
                    class="btn-info text-right">{{list.title}}</div>        
            </div>
        </div>
    </div>
}

}
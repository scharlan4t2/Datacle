@{  
if (ViewData["Type"].ToString() == "NewViewTypeMenu")
{
    @* new view type menu*@
        <div data-ng-click="dtViewType.setNew()" 
            class="btn-sm btn-info col-xs-1">Add Type</div>
    
}
if (ViewData["Type"].ToString() == "NewViewMenu")
{
    @* new view menu*@
        <div data-ng-click="dtView.setNew()" 
            class="btn-sm btn-info col-xs-1">Add View</div>
}

if( ViewData["Type"].ToString() == "NewViewType" )
{
    @* new view type entry*@
    <div class="panel-info bg-success modal-sm row" 
        data-ng-show="dtViewType.showNew()">
        <label class="badge" >Add Type</label>
        <input class="col-xs-12" type="text" data-ng-model="dtViewType.newtype.title"/> 
        <input class="col-xs-12" type="text" title="Description" data-ng-model="dtViewType.newtype.attrib.attrib.desc"/>
        <input class="ng-hide" type="text" title="Attribute" data-ng-model="dtViewType.newtype.attrib.attrib"/>

        <div class="col-xs-12 text-right">
            <div class="col-xs-4 btn-sm btn-info"
                data-ng-click="dtViewType.saveNew()">Add
            </div>
            <div class="col-xs-4 btn-sm btn-warning"
                    data-ng-click="dtViewType.hideNew()">Close
            </div>
        </div>
    </div>
}
if( ViewData["Type"].ToString() == "EditViewType" )
{
    @* new list type entry*@
    <div class="panel-info bg-success modal-sm row" 
        data-ng-show="dtViewType.showEdit()">
        <label class="badge" >Edit View Type</label>
        <input class="col-xs-12" type="text" data-ng-model="dtViewType.edititem.title"/> 
        <input class="col-xs-12" type="text" title="Description" data-ng-model="dtViewType.edititem.attrib.attrib.desc" />
        <input class="ng-hide" type="text" title="Attribute" data-ng-model="dtViewType.edititem.attrib.attrib" />

        <div class="col-xs-2 text-left">
            <div class="btn btn-danger"
                 data-ng-click="dtViewType.delEdit()">
                Delete
            </div>
        </div>
        <div class="col-xs-10 text-right">
            <div class="btn btn-info"
                    data-ng-click="dtViewType.saveEdit()">
                Save
            </div>
            <div class="btn btn-warning"
                    data-ng-click="dtViewType.hideEdit()">
                Close
            </div>
        </div>
        </div>
}
if (ViewData["Type"].ToString() == "NewView")
{
    @* new view entry*@
    <div class="panel-info bg-success modal-sm row" 
        data-ng-show="dtView.showNew()">
        <label class="badge" >Add View</label>
        <select class="col-xs-12" title="View Type" 
                data-ng-model="dtView.newview.typeId"
                data-ng-show="!dtViewType.dtList.showNew()"
                data-ng-options="lt.id as lt.title for lt in dtViewType.list">
        </select> 
        <input class="col-xs-12" type="text" title="View Title" data-ng-model="dtView.newview.title"/> 
        <input class="col-xs-12" type="text" title="Description" data-ng-model="dtView.newview.attrib.attrib.desc"/>            
        <input class="ng-hide" type="text" title="Attribute" data-ng-model="dtView.newview.attrib.attrib"/>

        <div class="col-xs-12 text-right">
            <div class="col-xs-4 btn-sm btn-default"
                    data-ng-click="dtView.saveNew()">Add
            </div>
            <div class="col-xs-4 btn-sm btn-warning"
                    data-ng-click="dtView.hideNew()">Close
            </div>
        </div>
    </div>
}

if (ViewData["Type"].ToString() == "EditView")
{
    @* new list entry*@
    <div class="panel-info bg-success modal-sm row" 
        data-ng-show="dtView.showEdit()">
        <label class="badge" >Edit View</label>
        <select class="col-xs-12" title="View Type" 
            data-ng-model="dtView.edititem.typeid"
            data-ng-options="lt.id as lt.title for lt in dtViewType.list">
        </select> 
        <input class="col-xs-12" type="text" title="View Title" data-ng-model="dtView.edititem.title"/> 
        <input class="col-xs-12" type="text" title="Description" data-ng-model="dtView.edititem.attrib.attrib.desc"/>            
        <label class="col-xs-2 sm-info" >Col</label>
        <input class="col-xs-2" type="text" title="width" data-ng-model="dtView.edititem.attrib.attrib.width"/>            
        <label class="col-xs-2 sm-info" >Title</label>
        <input class="col-xs-2" type="text" title="width" data-ng-model="dtView.edititem.attrib.attrib.widthtitle"/>            
        <label class="col-xs-2 sm-info" >Desc</label>
        <input class="col-xs-2" type="text" title="width" data-ng-model="dtView.edititem.attrib.attrib.widthdesc"/> 
        <label class="col-xs-3" >Show Desc</label><input class="col-xs-8" type="checkbox" title="width" data-ng-model="dtView.edititem.attrib.attrib.showdesc"/>            
        <input class="ng-hide" type="text" title="Attribute" data-ng-model="dtView.edititem.attrib.attrib"/>

        <div class="col-xs-2 text-left">
            <div class="btn btn-danger"
                 data-ng-click="dtView.delEdit()">
                Delete
            </div>
        </div>
        <div class="col-xs-10 text-right">
            <div class="col-xs-4 btn-sm btn-default"
                 data-ng-click="dtView.saveEdit()">
                Save
            </div>
            <div class="col-xs-4 btn-sm btn-warning"
                 data-ng-click="dtView.hideEdit()">
                Close
            </div>
        </div>
    </div>
}

if( ViewData["Type"].ToString() == "ViewType" )
{
    <div id="sortViewType">
        <div class="panel-info btn {{viewtype.isselect?'btn-info':'btn-success'}}"
             data-ng-mouseleave="dtViewType.setMouse(viewtype.id,false)"
             data-ng-repeat="viewtype in dtViewType.getList() | orderBy:'sort'">
            <div class="holder" data-ng-show="dtViewType.showMouse(viewtype.id)">
                <label class="badge"
                       data-ng-mouseleave="dtViewType.setMouse(viewtype.id,false)"
                       data-ng-click="dtViewType.setEdit(viewtype)">Edit</label>
            </div>
            <div data-ng-click="dtViewType.setObj(viewtype)"
                 data-ng-mouseenter="dtViewType.setMouse(viewtype.id,true)">
                <input type="hidden" value="{{viewtype.id}}"
                       data-ng-model="viewtype.id"
                       data-sort="{{viewtype.sort}}" />
                <span class="text-left">{{viewtype.title}}</span>
            </div>
        </div>
    </div>
}



if (ViewData["Type"].ToString() == "Views")
{
    @* show selected type view *@
    <div id="sortView">
        <div class="btn {{view.isselect?'btn-info panel-info':'btn-success panel-default'}}"
             data-ng-show="dtViewType.showObj(view.typeid)"
             title="{{view.attrib.attrib.desc}}"
             data-ng-mouseleave="dtView.setMouse(view.id,false)"
             data-ng-repeat="view in dtView.getList()  | orderBy:'sort'">
            <div class="holder" data-ng-show="dtView.showMouse(view.id)">
                <label class="badge"
                       data-ng-mouseleave="dtView.setMouse(view.id,false)"
                       data-ng-click="dtView.setEdit(view)">Edit</label>
            </div>
            <div title="{{view.attrib.attrib.desc}}"
                 data-ng-mouseenter="dtView.setMouse(view.id,true)">
                <input type="hidden" value="{{view.id}}" data-ng-model="view.id"
                       data-sort="{{view.sort}}" />
                <span data-ng-click="dtView.setType(view)"
                      class="text-left">{{view.type}}</span>
                <div data-ng-click="dtView.setObj(view)"
                     class="btn-info text-right">{{view.title}}</div>
            </div>
        </div>
    </div>
}
}